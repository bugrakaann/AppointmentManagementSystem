@model IEnumerable<DTOs.DTOs.AppointmentDto>

@{
    ViewData["title"] = "Randevu Oturumlarý";
    var serializedModel = Newtonsoft.Json.JsonConvert.SerializeObject(Model);
    int pageIndex = ViewBag.PageIndex;
    var dates = Model.Select(w => w.startTime.Date).Distinct().ToList();
    int tabNumber = Math.Min(7, dates.Count);
}

<!-- Main Wrapper -->
<div class="main-wrapper">

<!-- Breadcrumb -->
<div class="breadcrumb-bar">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-12 col-12">
                <h2 class="breadcrumb-title">Randevu Oturumlarý</h2>
            </div>
        </div>
    </div>
</div>
<!-- /Breadcrumb -->

<!-- Page Content -->
<div class="content">
    <div class="container">

        <div class="row">
            <div class="col-md-5 col-lg-4 col-xl-3 theiaStickySidebar">

                <!-- Profile Sidebar -->
                <div class="profile-sidebar">
                    <div class="widget-profile pro-widget-content">
                        <div class="profile-info-widget">
                            <a href="#" class="booking-pro-img">
                                <img src="~/assets/img/instructors/instructor-thumb-01.jpg" alt="User Image">
                            </a>
                            <div class="profile-det-info">
                                <h3>David Lee</h3>

                                <div class="customer-details">
                                    <h5 class="mb-0">Aerospace Engineering</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="dashboard-widget">
                        <nav class="dashboard-menu">
                            <ul>
                                <li>
                                    <a href="instructor-dashboard.html">
                                        <i class="fas fa-columns"></i>
                                        <span>Dashboard</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="appointments.html">
                                        <i class="fas fa-calendar-check"></i>
                                        <span>Appointments</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="my-student.html">
                                        <i class="fas fa-user-injured"></i>
                                        <span>My Student</span>
                                    </a>
                                </li>
                                <li class="active">
                                    <a href="schedule-timings.html">
                                        <i class="fas fa-hourglass-start"></i>
                                        <span>Schedule Timings</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="invoices.html">
                                        <i class="fas fa-file-invoice"></i>
                                        <span>Invoices</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="reviews.html">
                                        <i class="fas fa-star"></i>
                                        <span>Reviews</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="chat-instructor.html">
                                        <i class="fas fa-comments"></i>
                                        <span>Message</span>
                                        <small class="unread-msg">23</small>
                                    </a>
                                </li>
                                <li>
                                    <a href="instructor-profile-settings.html">
                                        <i class="fas fa-user-cog"></i>
                                        <span>Profile Settings</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="social-media.html">
                                        <i class="fas fa-share-alt"></i>
                                        <span>Social Media</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="instructor-change-password.html">
                                        <i class="fas fa-lock"></i>
                                        <span>Change Password</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="index.html">
                                        <i class="fas fa-sign-out-alt"></i>
                                        <span>Logout</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
                <!-- /Profile Sidebar -->

            </div>

            <div class="col-md-7 col-lg-8 col-xl-9">

                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Edit&Create Sessions</h4>
                                <div class="profile-box">
                                    <div class="row">


                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="card schedule-widget mb-0">

                                                <!-- Schedule Header -->
                                                <div class="schedule-header ">
                                                    <!-- Schedule Nav -->
                                                    <div class="schedule-nav">
                                                        <ul class="nav nav-tabs justify-content-center">
                                                            <li class="nav-item">
                                                                @if (pageIndex > 0)
                                                                {
                                                                    <button class="btn-custom" onclick="location.href='@Url.Action("Availability", new { pageIndex = pageIndex - 1 })'">
                                                                        <i class="fas fa-arrow-left"></i>
                                                                    </button>
                                                                }
                                                                else
                                                                {
                                                                    <button class="btn-custom" disabled>
                                                                        <i class="fas fa-arrow-left"></i>
                                                                    </button>
                                                                }
                                                            </li>

                                                            
                                                            @for (int i = 0; i < dates.Count(); i++)
                                                            {
                                                                var dataOfDate = Model.Where(w => w.startTime.Date == dates[i]);
                                                                var isActive = i == 0 ? "active" : "";

                                                                DateTime workStart = dates[i];
                                                                <li class="nav-item">
                                                                    <a class="nav-link @isActive" data-bs-toggle="tab" href="#slot_@i">@workStart.ToString("dd/MM/yy")</a>
                                                                </li>
                                                            }

                                                            <li class="nav-item">
                                                                @if (ViewBag.HasMorePages)
                                                                {
                                                                    <button class="btn-custom" onclick="location.href='@Url.Action("Availability", new { pageIndex = pageIndex + 1 })'">
                                                                        <i class="fas fa-arrow-right"></i>
                                                                    </button>
                                                                }
                                                                else
                                                                {
                                                                    <button class="btn-custom" disabled>
                                                                        <i class="fas fa-arrow-right"></i>
                                                                    </button>
                                                                }
                                                            </li>
                                                        </ul>
                                                    </div>
                                                    <!-- /Schedule Nav -->

                                                </div>
                                                <!-- /Schedule Header -->
                                                <div class="tab-content schedule-cont"></div>
                                                <div class="row">
                                                    <div class="col-1 col-sm-3 text-center">
                                                        <h4 class="card-title">
                                                            <span>Available Sessions</span>
                                                        </h4>
                                                    </div>
                                                    <div class="col-1 col-sm-8 col-md-8 text-sm-end">
                                                        <h4 class="card-title d-flex justify-content-end">
                                                            <a class="edit-link" data-bs-toggle="modal" href="#edit_time_slot"><i class="fa fa-edit me-1"></i>Edit</a>
                                                        </h4>
                                                    </div>
                                                </div>

                                                <div class="tab-content schedule-cont">
                                                    @for (int i = 0; i < dates.Count; i++)
                                                    {
                                                        var dataOfDate = Model.Where(w => w.startTime.Date == dates[i]);
                                                        var isActive = i == 0 ? "show active" : "";
                                                        <div id="slot_@i" class="tab-pane fade @isActive">
                                                            <div class="pro-times">
                                                                @for (int j = 0; j < dataOfDate.Count(); j++)
                                                                {
                                                                    <div class="pro-slot-list" id="slot_@i@j">
                                                                        @{
                                                                            var availability = dataOfDate.ElementAt(j);
                                                                        }
                                                                        @availability.startTime.ToString("HH:mm") - @availability.endTime.ToString("HH:mm")
                                                                            <a href="@Url.Action("Delete", new {id = availability.Id})">
                                                                            <i class="fa fa-trash"></i>
                                                                        </a>
                                                                    </div>
                                                                }
                                                            </div>
                                                        </div>
                                                    }
                                                    <!-- /Schedule Content -->

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

</div>
<!-- /Page Content -->


</div>
<!-- /Main Wrapper -->


<!-- Edit Time Slot Modal -->
<div class="modal fade custom-modal" id="edit_time_slot">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Time Slots</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="timeSlotsForm" action="@Url.Action("Create")" method="post">
                    <div class="hours-info" id="hoursModal">
                        <div class="row form-row hours-cont">
                            <div class="col-12 col-md-10">
                                <div class="row form-row">
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label>Start Time</label>
                                            <input class="form-control" name="WorkStart" type="datetime-local">
                                            <label>End Time</label>
                                            <input class="form-control" name="WorkEnd" type="datetime-local">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="submit-section text-center">
                        <button type="submit" class="btn btn-primary submit-btn">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- /Edit Time Slot Modal -->